
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>



<article>
  <section>
    <header>
      <h1 class="page-title">Welcome to Tech Job Corp.!</h1>
      <p>We're so happy you've decided to apply. Submit your resume below and we'll get back to you shortly (...probably just ghost you).</p>
    </header>
  </section>


<% if @user.errors.full_messages.any? %>
  <strong>Errors:</strong>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end  %>
  </ul>
<% end %>

<%# Create account form %>
<%= form_with model: @user, local: true do |f| %>
  <%= f.label :username, 'Applicant name' %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>

<button id="upload_widget" class="cloudinary-button">upload profile picture</button>
    <br>
  <%= f.submit "Let's play", :class => 'button-primary' %>
  <%= link_to 'Cancel', root_path, :class => 'button button-secondary' %>
<% end %>


</article>
<script>
  var myWidget = cloudinary.createUploadWidget({
    cloudName: 'do9y9tnbr',
    uploadPreset: 'kzqevlztT'}, (error, result) => {
      if (!error && result && result.event === "success") {
        console.log('Done! Here is the image info: ', result.info);
      }
    }
  )

  document.getElementById("upload_widget").addEventListener("click", function(){
      myWidget.open();
    }, false);
  </script>
